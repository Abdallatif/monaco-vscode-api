{
	"extends": "@codingame/tsconfig",
	"compilerOptions": {
		"declaration": false,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"target": "es2020",
		"module": "esnext",
		"lib": [
			"es2021",
			"DOM"
		],
		"outDir": "dist",
		"rootDir": "./",
		"paths": {
			"vs/*": [
				"./vscode/vs/*"
			],
			"vscode/*": [
				"./vscode/*"
			],
			"monaco-editor/esm/*": [
				"./vscode/*"
			]
		},
		"preserveConstEnums": true,
		"types": ["monaco-editor", "node"]
	},
	"include": [
		"./src/**/*",
		"./vscode/**/*",
		"./rollup/*.ts",
		"./release.ts"
	]
}